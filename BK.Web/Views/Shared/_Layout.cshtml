<!DOCTYPE html>
<html lang="zh-cn">
<head>
    <meta charset="utf-8">
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>@ViewBag.Title</title>
    <link href="http://res.bkcoding.com/layui/css/layui.css" rel="stylesheet" />
    <link href="http://res.bkcoding.com/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/res/css/style.css" rel="stylesheet" />
</head>
<body>
    <div class="layui-fluid">
        <div class="layui-header header ">
            <div class="layui-main">

                <a href="/" class="logo">BkCoding</a>

                <!-- 导航菜单 -->
                <ul class="layui-nav" lay-filter="nav" id="nav-view">
                    <li class="layui-nav-item layui-this">
                        <a href="/"><i class="fa fa-home fa-fw"></i>&nbsp;网站首页</a>
                    </li>
                    <li class="layui-nav-item">
                        <a href="@Url.Action("Index","Posts",new {c="note" })"><i class="fa fa-file-text fa-fw"></i>&nbsp;日常随笔</a>
                    </li>
                    <li class="layui-nav-item">
                        <a href="@Url.Action("Index","Posts",new {c="programmer" })"><i class="fa fa-tags fa-fw"></i>&nbsp;程序人生</a>
                    </li>
                    <li class="layui-nav-item">
                        <a href="@Url.Action("Index","Posts",new {c="file" })"><i class="fa fa-tags fa-fw"></i>&nbsp;资源分享</a>
                    </li>
                    <li class="layui-nav-item">
                        <a href="/Posts/Details/1"><i class="fa fa-info fa-fw"></i>&nbsp;关于本站</a>
                    </li>
                </ul>
                <div class="layui-form component">
                    <input type="text" name="title" required lay-verify="required" placeholder="请输入标题" autocomplete="off" class="layui-input">
                </div>
            </div>
        </div>
        @RenderBody()
        <footer class="footer">
            <p><span>Copyright</span> <span>&copy;</span> <span>@DateTime.Now.Year</span> <a href="/"> BKCoding </a> <span><a href="http://www.bkcoding.com"> www.bkcoding.com </a></span></p>
            <p><a href="http://www.miibeian.gov.cn/" target="_blank">蜀ICP备16029915号-1</a></p>
        </footer>
    </div>
    <script src="http://res.bkcoding.com/layui/layui.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/moment.js/2.10.6/moment.min.js"></script>
    <script type="text/javascript">
        layui.config({
            base: '/res/js/'
        }).use('app');
    </script>
    @RenderSection("js", false)

</body>
</html>
